<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linear4search"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layoutDescription="@xml/activity_searchactivity_scene"
    tools:context=".searchactivity"
    android:orientation="vertical">



    <LinearLayout
        android:weightSum="10"
        android:layout_margin="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <ImageButton
            android:id="@+id/returnsearch"
            android:backgroundTint="@color/zxing_transparent"
            android:layout_weight="2"
            android:src="@drawable/ic_return"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>

        <EditText
            android:id="@+id/heysearch"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="7"
            android:hint="Search a plant" />

        <ImageButton
            android:id="@+id/searchplantbtn"
            android:backgroundTint="@color/zxing_transparent"
            android:layout_weight="1"
            android:src="@drawable/ic_search"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>

    </LinearLayout>

    <TextView
        android:hint="Has to have some info btw"
        android:id="@+id/text4api"
        android:scrollbars="vertical"
        android:layout_margin="20dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>